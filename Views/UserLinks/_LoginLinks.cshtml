@model LoginLinksViewModel

@if(Model.UserIsRegistered)
{
	<a href="@Url.Action(ActionNames.SignOut, ControllerNames.Account)" class="user-link log-out-link">
		<i class="fa fa-sign-out"></i>
		@Html.StringResource("skinbase.cs.5")
	</a>
}
else
{
	<a href="@Url.Action(ActionNames.SignIn, ControllerNames.Account, new RouteValueDictionary { { RouteDataKeys.ReturnUrl, Request.RawUrl } })" class="user-link log-in-link">
		<i class="fa fa-sign-in"></i>
		@Html.StringResource("skinbase.cs.4")
	</a>
}